{
  "name": "nginx-web-server",
  "type": "docker",
  "image": "nginx:latest",
  "containerName": "dev-nginx",
  "ports": {
    "8080": "80",
    "8443": "443"
  },
  "volumes": {
    "./html": "/usr/share/nginx/html",
    "./nginx.conf": "/etc/nginx/nginx.conf"
  },
  "env": {
    "NGINX_HOST": "localhost",
    "NGINX_PORT": "80"
  },
  "healthCheck": {
    "url": "http://localhost:8080",
    "interval": 15,
    "timeout": 5,
    "retries": 3
  },
  "autoRestart": true,
  "restartDelay": 2,
  "maxRestarts": 3
}