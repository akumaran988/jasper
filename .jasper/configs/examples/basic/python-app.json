{
  "name": "python-flask-app",
  "type": "process",
  "command": "python3",
  "args": ["-m", "flask", "run"],
  "workingDir": "/path/to/flask/project",
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "development",
    "FLASK_RUN_HOST": "0.0.0.0",
    "FLASK_RUN_PORT": "5000"
  },
  "healthCheck": {
    "url": "http://localhost:5000/ping",
    "interval": 20,
    "timeout": 3,
    "retries": 2
  },
  "autoRestart": true,
  "restartDelay": 3,
  "maxRestarts": 5
}