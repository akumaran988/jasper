{
  "llmProvider": "google-ai",
  "model": "gemini-2.5-flash-lite",
  "maxIterations": 15,
  "tokenLimit": 15000,
  "apiThrottleMs": 2000,
  "mcpServers": {
    "service-manager": {
      "mode": "local",
      "autoStart": true,
      "httpUrl": "http://localhost:8081/mcp/tools",
      "description": "Service Manager - start/stop/monitor services and Docker containers",
      "trust": true,
      "timeout": 30000,
      "serverConfig": {
        "port": 8081,
        "mode": "local",
        "env": {
          "NODE_ENV": "development",
          "LOG_LEVEL": "debug"
        }
      }
    }
  },
  "serviceDefinitions": {
    "dev-api-server": {
      "mcpServer": "service-manager",
      "config": {
        "name": "dev-api",
        "type": "process",
        "command": "npm",
        "args": ["run", "dev"],
        "workingDir": "./my-project",
        "env": {
          "NODE_ENV": "development",
          "PORT": "3000"
        },
        "healthCheck": {
          "url": "http://localhost:3000/health",
          "interval": 30
        },
        "autoRestart": true
      }
    },
    "dev-database": {
      "mcpServer": "service-manager",
      "config": {
        "name": "postgres-dev",
        "type": "docker",
        "image": "postgres:15",
        "ports": {
          "5432": "5432"
        },
        "volumes": {
          "./data/postgres": "/var/lib/postgresql/data"
        },
        "env": {
          "POSTGRES_DB": "devdb",
          "POSTGRES_USER": "dev",
          "POSTGRES_PASSWORD": "devpass"
        },
        "healthCheck": {
          "command": "pg_isready -U dev",
          "interval": 20
        },
        "autoRestart": true
      }
    }
  },
  "deploymentProfiles": {
    "full-dev": {
      "description": "Full development stack using built-in servers",
      "services": ["dev-database", "dev-api-server"],
      "parallel": false,
      "autoStart": true
    }
  }
}