{
  "name": "@jasper/mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Universal MCP server launcher - can start any Jasper MCP server package",
  "main": "dist/index.js",
  "bin": {
    "jasper-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    
    "start:service-manager": "npm run dev -- start --server=service-manager --mode=local --port=8081",
    "start:service-manager:remote": "npm run dev -- start --server=service-manager --mode=remote --port=8080 --auth=required",
    "start:service-manager:prod": "npm run dev -- start --server=service-manager --mode=remote --port=8443 --auth=required",
    
    "help": "npm run dev -- --help"
  },
  "dependencies": {
    "@jasper/service-manager": "file:../../packages/service-manager",
    "@modelcontextprotocol/sdk": "^1.0.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "server",
    "jasper",
    "launcher"
  ]
}